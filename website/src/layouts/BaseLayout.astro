---
import Header from '@components/Header.astro';
import Footer from '@components/Footer.astro';
import '@/styles/global.css';

interface Props {
  title: string;
  description?: string;
  ogImage?: string;
  keywords?: string;
  type?: 'website' | 'article';
}

const defaults = {
  description: 'dtvem is the cross-platform runtime version manager for Python, Node.js, and Ruby that works seamlessly on Windows, macOS, and Linux. No shell hacks required.',
  keywords: 'version manager, runtime manager, Python version manager, Node.js version manager, Ruby version manager, Windows version manager, nvm alternative, pyenv alternative, cross-platform, developer tools',
  ogImage: '/images/og-default.png',
};

const {
  title,
  description = defaults.description,
  ogImage = defaults.ogImage,
  keywords = defaults.keywords,
  type = 'website'
} = Astro.props;

const canonicalUrl = new URL(Astro.url.pathname, Astro.site);
const currentPath = Astro.url.pathname;
const siteName = 'dtvem';
const fullTitle = title.includes('dtvem') ? title : `${title} | dtvem`;

// JSON-LD Structured Data
const jsonLd = {
  '@context': 'https://schema.org',
  '@type': 'SoftwareApplication',
  name: 'dtvem',
  applicationCategory: 'DeveloperApplication',
  operatingSystem: 'Windows, macOS, Linux',
  description: defaults.description,
  url: Astro.site?.toString(),
  offers: {
    '@type': 'Offer',
    price: '0',
    priceCurrency: 'USD',
  },
  author: {
    '@type': 'Organization',
    name: 'dtvem',
    url: Astro.site?.toString(),
  },
  softwareHelp: {
    '@type': 'WebPage',
    url: new URL('/docs', Astro.site).toString(),
  },
};
---

<!doctype html>
<html lang="en" class="dark">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content={description} />
    <meta name="keywords" content={keywords} />
    <meta name="author" content="dtvem" />
    <meta name="generator" content={Astro.generator} />
    <meta name="theme-color" content="#2dd4bf" />
    <meta name="robots" content="index, follow" />

    <!-- Canonical URL -->
    <link rel="canonical" href={canonicalUrl} />

    <!-- Favicon -->
    <link rel="icon" type="image/jpeg" href="/images/logo.jpg" />
    <link rel="apple-touch-icon" href="/images/logo.jpg" />

    <!-- Open Graph -->
    <meta property="og:type" content={type} />
    <meta property="og:site_name" content={siteName} />
    <meta property="og:locale" content="en_US" />
    <meta property="og:url" content={canonicalUrl} />
    <meta property="og:title" content={fullTitle} />
    <meta property="og:description" content={description} />
    <meta property="og:image" content={new URL(ogImage, Astro.site)} />
    <meta property="og:image:alt" content="dtvem - Cross-platform runtime version manager" />

    <!-- Twitter Card -->
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:site" content="@dtvemio" />
    <meta name="twitter:creator" content="@dtvemio" />
    <meta name="twitter:title" content={fullTitle} />
    <meta name="twitter:description" content={description} />
    <meta name="twitter:image" content={new URL(ogImage, Astro.site)} />

    <!-- JSON-LD Structured Data -->
    <script type="application/ld+json" set:html={JSON.stringify(jsonLd)} />

    <!-- Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&family=JetBrains+Mono:wght@400;500&display=swap" rel="stylesheet" />

    <title>{fullTitle}</title>
  </head>
  <body class="flex min-h-screen flex-col">
    <Header currentPath={currentPath} />
    <main class="flex-1">
      <slot />
    </main>
    <Footer />
  </body>
</html>
