---
interface Props {
  currentPath?: string;
}

const { currentPath = '' } = Astro.props;

const navItems = [
  { href: '/', label: 'Home' },
  { href: '/features', label: 'Features' },
  { href: '/compare', label: 'Compare' },
  { href: '/docs', label: 'Docs' },
];

function isActive(href: string): boolean {
  if (href === '/') return currentPath === '/';
  return currentPath.startsWith(href);
}
---

<header class="sticky top-0 z-50 w-full border-b border-primary-600 bg-navy-900 backdrop-blur">
  <div class="container">
    <nav class="flex h-16 items-center justify-between">
      <a href="/" class="flex items-center gap-2 text-xl font-bold text-white">
        <img src="/images/logo.jpg" alt="dtvem logo" class="h-8 w-8 rounded" />
        <span class="text-primary-400">dtvem</span>
      </a>

      <!-- Desktop Navigation -->
      <div class="hidden items-center gap-1 md:flex">
        {navItems.map((item) => (
          <a
            href={item.href}
            class:list={[
              'rounded-lg px-3 py-2 text-sm font-medium transition-colors',
              isActive(item.href)
                ? 'bg-slate-800 text-white'
                : 'text-slate-400 hover:bg-slate-800 hover:text-white',
            ]}
          >
            {item.label}
          </a>
        ))}
      </div>

      <!-- Mobile menu button -->
      <button
        id="mobile-menu-button"
        type="button"
        class="rounded-lg p-2 text-slate-400 hover:bg-slate-800 hover:text-white md:hidden"
        aria-label="Toggle menu"
      >
        <svg class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
        </svg>
      </button>
    </nav>

    <!-- Mobile Navigation -->
    <div id="mobile-menu" class="hidden border-t border-primary-600 py-4 md:hidden">
      {navItems.map((item) => (
        <a
          href={item.href}
          class:list={[
            'block rounded-lg px-3 py-2 text-base font-medium',
            isActive(item.href)
              ? 'bg-slate-800 text-white'
              : 'text-slate-400 hover:bg-slate-800 hover:text-white',
          ]}
        >
          {item.label}
        </a>
      ))}
    </div>
  </div>
</header>

<script>
  const mobileMenuButton = document.getElementById('mobile-menu-button');
  const mobileMenu = document.getElementById('mobile-menu');

  mobileMenuButton?.addEventListener('click', () => {
    mobileMenu?.classList.toggle('hidden');
  });
</script>
